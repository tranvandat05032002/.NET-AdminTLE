@{
    ViewBag.Title = "Quản lý mặt hàng";
}

<div class="box box-primary">
    <div class="box-body">
        <!-- Form nhập đầu vào tìm kiếm-->
        <form class="form-inline">
            <div class="form-group" style="margin: 5px 10px 0 0;">
                <label>Loại hàng:</label><br />
                <select class="form-control">
                    <option selected disabled>- Chọn loại hàng -</option>
                </select>
            </div>
            <div class="form-group" style="margin: 5px 10px 0 0;">
                <label>Nhà cung cấp:</label><br />
                <select class="form-control">
                    <option selected disabled>- Chọn nhà cung cấp -</option>
                </select>
            </div>
            <div class="form-group" style="margin: 5px 10px 0 0;">
                <label>Giá từ:</label><br />
                <input type="number" class="form-control" placeholder="20 000">
            </div>
            <div class="form-group" style="margin: 5px 10px 0 0;">
                <label>đến:</label><br />
                <input type="number" class="form-control" placeholder="50 000">
            </div>
            <div class="form-group" style="margin-top: 5px;">
                <label>Tên mặt hàng cần tìm:</label><br />
                <div class="input-form" style="display: inline-flex;">
                    <input type="text" class="form-control" placeholder="Nhập tên mặt hàng cần tìm" />
                    <div class="input-group-btn" >
                        <button class="btn btn-info" type="submit">
                            <i class="fa fa-search"></i>
                        </button>
                        <a href="~/Customer/Create" class="btn btn-primary" style="margin-left: 5px;">
                            <i class="fa fa-plus"></i> Bổ sung
                        </a>
                    </div>
                </div>
            </div>
        </form>

        <p style="margin: 10px 0;">Có <b>1,000</b> mặt hàng trong tổng số <b>100</b> trang</p>
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr class="bg-primary">
                        <th>Ảnh</th>
                        <th>Tên mặt hàng</th>
                        <th>Đơn vị tính</th>
                        <th>Giá</th>
                        <th style="width: 80px;"></th>
                    </tr>

                </thead>
                <tbody>
                    @for (int i = 1; i <= 10; i++)
                    {
                        <tr>
                            <td><img src="#" class="img" /></td>
                            <td>Mô hình vịt</td>
                            <td>Chiếc</td>
                            <td>200 000</td>
                            <td class="text-right">
                                <a href="~/Product/Edit/123" class="btn btn-xs btn-info">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/Product/Delete/123" class="btn btn-xs btn-danger">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
        <div class="text-center">
            <ul class="pagination">
                <li><a href="#">1</a></li>
                <li class="active"><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
            </ul>
        </div>
    </div>

</div>