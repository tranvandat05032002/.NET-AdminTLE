@model IEnumerable<Customer>
@{
    ViewBag.Title = "Quản lý khách hàng";
}

<div class="box box-primary">
    <div class="box-body">
        <!-- Form nhập đầu vào tìm kiếm-->
        <form>
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Nhập tên khách hàng cần tìm" autofocus name="searchValue" value="@ViewBag.Searchvaue"/>
                <div class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                    <a href="~/Customer/Create" class="btn btn-primary" style="margin-left: 5px;">
                        <i class="fa fa-plus"></i>Thêm mới
                    </a>
                </div>
            </div>
        </form>

        <p style="margin: 10px 0;">Có <b>1,000 </b>khách hàng trong tổng số <b>100</b> trang</p>
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr class="bg-primary">
                        <th class="text-center" style="vertical-align: middle;">Mã khách hàng</th>
                        <th class="text-center" style="vertical-align: middle;">Tên khách hàng</th>
                        <th class="text-center" style="vertical-align: middle;">Tên giao dịch</th>
                        <th class="text-center" style="vertical-align: middle;">Địa chỉ</th>
                        <th class="text-center" style="vertical-align: middle;">Điện thoại</th>
                        <th class="text-center" style="vertical-align: middle;">Địa chỉ Email</th>
                         <th class="text-center" style="vertical-align: middle;">Tỉnh thành</th>
                        <th class="text-center" style="vertical-align: middle;">Bị khóa</th>
                        <th class="text-center" style="vertical-align: middle; width: 100px;">Hành động</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                         <td class="text-center" style="vertical-align: middle;">#@item.CustomerID</td>
                            <td class="text-center" style="vertical-align: middle;">@item.CustomerName</td>
                            <td class="text-center" style="vertical-align: middle;">@item.ContactName</td>
                            <td class="text-center" style="vertical-align: middle;">@item.Address</td>
                            <td class="text-center" style="vertical-align: middle;">@item.Phone</td>
                            <td class="text-center" style="vertical-align: middle;">@item.Email</td>
                            <td class="text-center" style="vertical-align: middle;">@item.Province</td>
                            <td class="text-center" style="vertical-align: middle;">@(item.IsLocked ? "x" : "")</td>
                             <td class="text-center" style="vertical-align: middle;">
                                <a href="~/Customer/Edit/@item.CustomerID" class="btn btn-xs btn-info">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/Customer/Delete/@item.CustomerID" class="btn btn-xs btn-danger">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
        <div class="text-center">
            <ul class="pagination">
                @for(int i = 1; i <= ViewBag.PageCount; i++) {
                    if(i == ViewBag.Page) {
                        <li class="active"><a href="#">@i</a></li>  
                    }
                    else {
                        <li><a href="~/Customer?page=@i&searchValue=@ViewBag.SearchValue">@i</a></li>  
                    }
                }
            </ul>
        </div>
    </div>

</div>