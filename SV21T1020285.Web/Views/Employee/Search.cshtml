@model SV21T1020285.Web.Models.EmployeeSearchResult
@{
    Layout = null;
}
 <p style="margin-top:10px">
    Có <strong>@Model.RowCount</strong> nhân viên trong tổng số <strong>@Model.PageCount</strong> trang.
</p>
<div class="row">
    @foreach (var item in Model.Data)
    {
        <div class="col-sm-4">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">@item.FullName</h3>
                    <div class="box-tools pull-right">
                        <a class="btn btn-box-tool" href="~/Employee/Edit/@item.EmployeeID">
                            <i class="fa fa-edit text-primary"></i>
                        </a>
                        <a class="btn btn-box-tool" href="~/Employee/Delete/@item.EmployeeID">
                            <i class="fa fa-trash text-danger"></i>
                        </a>
                    </div>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-sm-4">
                            <img class="profile-user-img img-responsive img-bordered" src="~/images/employee/@(string.IsNullOrWhiteSpace(item.Photo) ? "default-image.gif" : item.Photo)">
                        </div>
                        <div class="col-sm-8">
                            <ul class="list-group list-group-unbordered">
                                <li class="list-group-item">
                                    <i class="fa fa-birthday-cake"></i> @(item.BirthDate.ToString("dd/MM/yyyy"))
                                </li>
                                <li class="list-group-item">
                                    <i class="fa fa-phone"></i> @item.Phone
                                </li>
                                <li class="list-group-item">
                                    <i class="fa fa-envelope"></i> @item.Email
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="text-center">
    <ul class="pagination">
        @for(int i = 1; i <= Model.PageCount; i++) {
            if(i == Model.Page) {
                <li class="active"><a href="#">@i</a></li>  
            }
            else {
                <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>  
            }
        }
    </ul>
</div>