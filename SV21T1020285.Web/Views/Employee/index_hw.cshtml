                <thead>
                    <tr class="bg-primary">
                        <th>Ảnh</th>
                        <th>Tên nhân viên</th>
                        <th>Ngày sinh</th>
                        <th>Điện thoại</th>
                        <th>Email</th>
                        <th>Địa chỉ</th>   
                        <th>Đang làm việc </th>
                        <th style="width: 80px;"></th>
                    </tr>

                </thead>
                <tbody>
                    @for (int i = 1; i <= 10; i++)
                    {
