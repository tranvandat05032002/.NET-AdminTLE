                            <td>Quack quack</td>
                            <td>01/01/1999</td>
                            <td>0965457520</td>
                            <td>duckygo@gmail.com</td>
                            <td>11 Nguyễn Tất Thành</td>
                            <td class="text-center">✓</td>
                            <td class="text-right">
                                <a href="~/Customer/Edit/123" class="btn btn-xs btn-info">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/Customer/Delete/123" class="btn btn-xs btn-danger">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
