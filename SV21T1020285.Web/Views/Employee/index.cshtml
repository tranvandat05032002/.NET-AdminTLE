@model IEnumerable<Employee>
@{
    ViewBag.Title = "Quản lý nhân viên";
}

<div class="box box-primary">
    <div class="box-body">
        <!-- Form nhập đầu vào tìm kiếm-->
        <form>
            <div class="input-group">
                <input name="searchValue"
                       type="text"
                       class="form-control"
                       placeholder="Nhập tên nhân viên cần tìm"
                       value="@ViewBag.Searchvaue"
                       autofocus />
                <div class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                    <a href="~/Employee/Create" class="btn btn-primary" style="margin-left:5px">
                        <i class="fa fa-plus"></i> Bổ sung
                    </a>
                </div>
            </div>
        </form>

        <!-- Hiển thị dữ liệu -->
        <p style="margin-top:10px">
            Có <strong>100</strong> nhân viên trong tổng số <strong>10</strong> trang.
        </p>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-4">
                    <div class="box box-info">
                        <div class="box-header with-border">
                            <h3 class="box-title">@item.FullName</h3>
                            <div class="box-tools pull-right">
                                <a class="btn btn-box-tool" href="~/Employee/Edit/@item.EmployeeID">
                                    <i class="fa fa-edit text-primary"></i>
                                </a>
                                <a class="btn btn-box-tool" href="~/Employee/Delete/@item.EmployeeID">
                                    <i class="fa fa-trash text-danger"></i>
                                </a>
                            </div>
                        </div>
                        <div class="box-body">
                            <div class="row">
                                <div class="col-sm-4">
                                    <img class="profile-user-img img-responsive img-bordered" src="~/images/employee/@(string.IsNullOrWhiteSpace(item.Photo) ? "default-image.gif" : item.Photo)">
                                </div>
                                <div class="col-sm-8">
                                    <ul class="list-group list-group-unbordered">
                                        <li class="list-group-item">
                                            <i class="fa fa-birthday-cake"></i> @(item.BirthDate.ToString("dd/MM/yyyy"))
                                        </li>
                                        <li class="list-group-item">
                                            <i class="fa fa-phone"></i> @item.Phone
                                        </li>
                                        <li class="list-group-item">
                                            <i class="fa fa-envelope"></i> @item.Email
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="text-center">
            <ul class="pagination">
                @for(int i = 1; i <= ViewBag.PageCount; i++) {
                    if(i == ViewBag.Page) {
                        <li class="active"><a href="#">@i</a></li>  
                    }
                    else {
                        <li><a href="~/Employee?page=@i&searchValue=@ViewBag.SearchValue">@i</a></li>  
                    }
                }
            </ul>
        </div>

    </div>
</div>
