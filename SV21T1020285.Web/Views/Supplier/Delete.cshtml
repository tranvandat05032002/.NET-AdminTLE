@model Supplier
@{
    ViewBag.Title = "Xóa nhà cung cấp";
}

<div class="box box-danger">
    <div class="box-body">
        <form action="~/Supplier/Delete/@Model.SupplierID" method="POST">
            <div class="form-group">
                <label>Tên nhà cung cấp:</label>
                <p class="form-control-static form-control">@Model.SupplierName</p>
            </div>
            
            <div class="form-group">
                <label>Tên giao dịch:</label>
                <p class="form-control-static form-control">@Model.ContactName</p>
            </div>
            
            <div class="form-group">
                <label>Số điện thoại:</label>
                <p class="form-control-static form-control">@Model.Phone</p>
            </div>

            <div class="form-group">
                <label>Email:</label>
                <p class="form-control-static form-control">@Model.Email</p>
            </div>

            <div class="form-group">
                <label>Địa chỉ:</label>
                <p class="form-control-static form-control">@Model.Address</p>
            </div>

            <div class="form-group">
                <label>Tỉnh thành:</label>
                <p class="form-control-static form-control">@Model.Province</p>
            </div>

            <div class="form-group text-right">
                <button class="btn btn-danger">
                    <i class="fa fa-trash"></i> Xóa dữ liệu
                </button>
                <a href="~/Supplier" class="btn btn-default">Quay lại</a>
            </div>
        </form>

    </div>
</div>
