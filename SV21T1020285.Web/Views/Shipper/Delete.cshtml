@model Shipper
@{
    ViewBag.Title = "Xóa người giao hàng";
}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Shipper/Delete/@Model.ShipperID" method="POST">
  <div class="form-group">
    <label>Tên shipper:</label>
    <p class="form-control-static form-control">@Model.ShipperName</p>
  </div>
  <div class="form-group">
    <label>Số điện thoại:</label>
    <p class="form-control-static form-control">@Model.Phone</p>
  </div>
  <div class="form-group text-right">
        <button type="submit" class="btn btn-danger">
            <i clas="fa fa-trash"></i>
            Xóa dữ liệu
        </button>
        <a href="~/Shipper" class="btn btn-default">Quay lại</a>
  </div>
</form>
    </div>
</div>