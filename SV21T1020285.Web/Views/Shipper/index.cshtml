@model IEnumerable<Shipper>
@{
    ViewData["Title"] = "Quản lý người giao hàng";
}

<div class="box box-primary">
    <div class="box-body">
        <!-- Form nhập đầu vào tìm kiếm-->
        <form>
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Nhập tên nhà cung cấp cần tìm" autofocus name="searchValue" value="@ViewBag.Searchvaue"/>
                <div class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                    <a href="~/Shipper/Create" class="btn btn-primary" style="margin-left: 5px;">
                        <i class="fa fa-plus"></i>Thêm mới
                    </a>
                </div>
            </div>
        </form>

        <p style="margin: 10px 0;">Có <b>1,000 </b>nhà cung cấp trong tổng số <b>100</b> trang</p>
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped mx-auto">
                <thead>
                    <tr class="bg-primary">
                        <th class="text-center" style="vertical-align: middle;">Mã Shipper</th>
                        <th class="text-center" style="vertical-align: middle;">Tên Shipper</th>
                        <th class="text-center" style="vertical-align: middle;">Số điện thoại</th>
                        <th class="text-center" style="vertical-align: middle;" style="width: 100px;">Hành động</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center" style="vertical-align: middle;">#@item.ShipperID</td>
                            <td class="text-center" style="vertical-align: middle;">@item.ShipperName</td>
                            <td class="text-center" style="vertical-align: middle;">@item.Phone</td>
                            <td class="text-right text-center" style="vertical-align: middle;">
                                <a href="~/Shipper/Edit/@item.ShipperID" class="btn btn-xs btn-info">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/Shipper/Delete/@item.ShipperID" class="btn btn-xs btn-danger">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
        <div class="text-center">
            <ul class="pagination">
                @for(int i = 1; i <= ViewBag.PageCount; i++) {
                    if(i == ViewBag.Page) {
                        <li class="active"><a href="#">@i</a></li>  
                    }
                    else {
                        <li><a href="~/Shipper?page=@i&searchValue=@ViewBag.SearchValue">@i</a></li>  
                    }
                }
            </ul>
        </div>
    </div>

</div>