@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="author" content="Kodinger">
	<meta name="viewport" content="width=device-width,initial-scale=1">
	<title>Meteor - Đăng nhập</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
		integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
	<link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
	<style>
		.divider {
			display: flex;
			align-items: center;
			text-align: center;
			margin: 8px 0;
		}

		.divider::before,
		.divider::after {
			content: '';
			flex: 1;
			border-bottom: 1px solid #dee2e6;
			margin: 0 10px;
		}
	</style>
</head>

<body>
	<main class="my-login-page">
		<section>
			<div class="container h-100">
				<div class="row justify-content-md-center h-100">
					<div class="card-wrapper">
						<div class="main-logo">
							<a href="index.html">
								<h3 class="header-title text-center">MeteorShop</h3>
							</a>
						</div>
						<div class="card fat">
							<div class="card-body">
								<h4 class="card-title">Đăng ký</h4>
								<form action="~/Account/Register" method="POST" class="my-register-validation">
									
                                    <div class="form-group">
										<input id="fullName" type="fullName" class="form-control" name="fullName"
											value="" placeholder="Nhập tên của bạn" autofocus>
										@Html.ValidationMessage("fullName")
									</div>

                                    <div class="form-group">
										<input id="email" type="email" class="form-control" name="email"
											value="" placeholder="Examle@gmail.com" autofocus>
										@Html.ValidationMessage("email")
									</div>

                                    <div class="form-group">
										<input id="password" type="password" class="form-control" name="password"
											value="" placeholder="Nhập mật khẩu của bạn" autofocus>
										@Html.ValidationMessage("password")
									</div>

									<div class="form-group">
										<input id="confirmPassword" type="password" class="form-control" name="confirmPassword"
											placeholder="Hãy nhập lại mật khẩu của bạn" data-eye>
										@Html.ValidationMessage("confirmPassword")
									</div>

									<div class="d-flex flex-column">
										<div class="form-group m-0 flex-1">
											<button type="submit" class="btn btn-login btn-block">
												Đăng ký
											</button>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
	@{
        await Html.RenderPartialAsync("_Footer");
    }
</body>

</html>