@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width,initial-scale=1">
	<title>Meteor - Đổi mật khẩu</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
	<link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>

<body>
	<main class="my-change-password-page"> 
		<section>
			<div class="container h-100">
				<div class="row justify-content-md-center h-100">
					<div class="card-wrapper">
						<div class="card fat">
							<div class="card-body">
								<h4 class="card-title">Đổi mật khẩu</h4>
								<form action="~/Account/ChangePassword"  method="POST">
									<div class="form-group">
										<input id="oldPassword" type="password" class="form-control" name="oldPassword" value="" placeholder="Nhập mật khẩu cũ của bạn" autofocus>
                                        @Html.ValidationMessage(nameof(Model.oldPassword))
									</div>
	
									<div class="form-group">
										<input id="newPassword" type="password" class="form-control" name="newPassword" value="" placeholder="Nhập mật khẩu mới" data-eye>
                                        @Html.ValidationMessage(nameof(Model.newPassword))
									</div>
									<div class="form-group">
										<input id="confirmNewPassword" type="password" class="form-control" name="confirmNewPassword" value="" placeholder="Nhập lại mật khẩu mới" data-eye>
									   	@Html.ValidationMessage(nameof(Model.confirmNewPassword))
									</div>
									<div class="" style="margin: -10px 25px 0px 0px; font-size: 12px;">                                
										@Html.ValidationMessage("Error", new {@style = "color: #f00"})
									</div>
									
									<div class="form-group mt-4">
										<button type="submit" class="btn btn-login btn-block">
                                            Đổi mật khẩu
										</button>
									</div>
                                    <div class="form-group m-0 btn-change-password-back" style="width: 100%;">
										<a href="/" class="btn btn-block">
                                            Hủy
										</a>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
	@{
		await Html.RenderPartialAsync("_Footer");
	}
</body>
</html>